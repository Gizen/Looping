<Window x:Class="Looping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Looping"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525
        ">
    <Grid>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Height="20" Margin="177,34,0,0" TextWrapping="Wrap" Text="Loan Amount:" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" Height="20" Margin="177,84,0,0" TextWrapping="Wrap" Text="Monthly Payment:" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="textBlock1_Copy1" HorizontalAlignment="Left" Height="20" Margin="177,134,0,0" TextWrapping="Wrap" Text="Interest Rate:" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBoxLoanAmount" HorizontalAlignment="Left" Height="20" Margin="177,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBoxPaymentAmount" HorizontalAlignment="Left" Height="20" Margin="177,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBoxInterestRate" HorizontalAlignment="Left" Height="20" Margin="177,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="buttonLoanCalculator" Content="Start" HorizontalAlignment="Left" Height="20" Margin="177,184,0,0" VerticalAlignment="Top" Width="100" Click="buttonLoanCalculator_Click"/>
        <TextBlock x:Name="textBlockLoanAnswer" HorizontalAlignment="Left" Height="100" Margin="177,209,0,0" TextWrapping="Wrap" Text="Answer" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="textBlockX" HorizontalAlignment="Left" Height="20" Margin="19,34,0,0" TextWrapping="Wrap" Text="X:" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="textBlockNth" HorizontalAlignment="Left" Height="20" Margin="19,84,0,0" TextWrapping="Wrap" Text="Nth:" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBoxX" HorizontalAlignment="Left" Height="20" Margin="19,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="textBoxNth" HorizontalAlignment="Left" Height="20" Margin="19,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="textBlockXToTheNthAnswer" HorizontalAlignment="Left" Height="100" Margin="19,209,0,0" TextWrapping="Wrap" Text="Answer" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="buttonXToTheNthStart" Content="Start" HorizontalAlignment="Left" Height="20" Margin="19,184,0,0" VerticalAlignment="Top" Width="100" Click="buttonXToTheNthStart_Click"/>
        <TextBox x:Name="textBoxHailstoneStart" HorizontalAlignment="Left" Height="20" Margin="332,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Height="20" Margin="332,34,0,0" TextWrapping="Wrap" Text="Starting Value:" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="buttonHailstoneStart" Content="Start" HorizontalAlignment="Left" Height="20" Margin="332,184,0,0" VerticalAlignment="Top" Width="100" Click="buttonHailstoneStart_Click"/>
        <TextBox x:Name="textBlockhailstoneAnswer" HorizontalAlignment="Left" Height="100" Margin="332,209,0,0" TextWrapping="Wrap" Text="Answer" VerticalAlignment="Top" Width="100" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        <GroupBox x:Name="groupBox" Header="X To The Nth" HorizontalAlignment="Left" Height="300" Margin="10,11,0,0" VerticalAlignment="Top" Width="150"/>
        <GroupBox x:Name="groupBox1" Header="Loan Calculator" HorizontalAlignment="Left" Height="300" Margin="165,11,0,0" VerticalAlignment="Top" Width="150"/>
        <GroupBox x:Name="groupBox2" Header="Hailstone Sequence" HorizontalAlignment="Left" Height="300" Margin="320,11,0,0" VerticalAlignment="Top" Width="150"/>
    </Grid>
</Window>
